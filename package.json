{
    "name": "stt-app",
    "version": "1.0.0",
    "description": "Speech to Text Application",
    "homepage": "https://github.com/bekirbakar/stt-app",
    "repository": "https://github.com/bekirbakar/stt-app.git",
    "license": "",
    "keywords": [],
    "author": {
        "name": "Bekir Bakar",
        "email": "bekirbakar@icloud.com"
    },
    "main": "app.js",
    "scripts": {
        "test": "echo \"No tests\"",
        "start": "electron .",
        "build-mac": "electron-builder -m",
        "build-windows": "electron-builder -w",
        "build-linux": "electron-builder -l",
        "build-all": "electron-builder -wml"
    },
    "build": {
        "appId": "bb-stt-app",
        "productName": "stt-app",
        "artifactName": "stt-app.${ext}",
        "publish": [],
        "directories": {
            "output": "release"
        },
        "files": [
            "browser/**/*",
            "app.js",
            "package.json",
            "configuration/**/*",
            "packages/**/*"
        ],
        "asarUnpack": [
            "packages/**"
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "zip"
            ]
        }
    },
    "devDependencies": {
        "electron": "^24.3.1",
        "electron-builder": "^23.6.0",
        "jest": "^29.5.0"
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0",
        "electron-reload": "^2.0.0-alpha.1",
        "pidusage": "^3.0.2",
        "python-shell": "^5.0.0"
    }
}
